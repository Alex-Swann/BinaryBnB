extends ../layout.jade
block content
  h2 #{title}
  - if(user)
    a.button(href="spaces/new") List a space

  ul#spaces
    - for (var i = 0; i < spaces.length; i++)
      li.space
        img(src='http://lorempixel.com/70/70/city/')
        h4 
          | #{spaces[i].name}
          -if(user)
            form(action='/requests', method='post', class="inline")
              input(type='hidden' name='userId' value='#{user.id}')
              input(type='hidden' name='spaceId' value='#{spaces[i].id}')
              input(type='submit', value='Request this space' class='request')
        ul
          li
            | Price: Â£
            span.price #{spaces[i].price}
          li
            | Description:&nbsp;
            span.description #{spaces[i].description}
          li
            | Availability:&nbsp;
            span.availablefrom #{spaces[i].availablefrom}
            | &nbsp;-&nbsp;
            span.availableto #{spaces[i].availableto}

block content
  h2 #{title}
  input(type='submit', value='Sign Out')

  form(action='/spaces/new', method='post')
    label(for='name') Name:
    input(type='text', name='name', placeholder='Name')
    label(for='description') Description:
    textarea( name='description', placeholder='Description')
    label(for='price') Price Per Night:
    input(type='number', step='0.01', name='price', placeholder='Price Per Night')
    label(for='availablefrom') Available from (DD/MM/YYYY)
    input(type='date', name='availablefrom')
    label(for='availableto') Available to (DD/MM/YYYY)
    input(type='date', name='availableto')

    input(type='submit', value='List My Space')
